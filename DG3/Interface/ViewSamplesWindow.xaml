<Window x:Class="GestureStudio.ViewSamplesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestureStudio"
        mc:Ignorable="d"
        Title="Sample Viewer" Height="460" Width="500">
    <Grid>

        <StackPanel Margin="0,5,0,0">
        <GroupBox Header="Samples"   Height="200" Width="472" BorderThickness="1" BorderBrush="Black">
            <ScrollViewer Width="472" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden"  HorizontalAlignment="Left" >
                <Grid x:Name="SamplesGrid" HorizontalAlignment="Left"  VerticalAlignment="Top" />
            </ScrollViewer>
        </GroupBox>

        <GroupBox Header="Parts"  Height="200" Width="472" BorderThickness="1" BorderBrush="Black">
                <ScrollViewer HorizontalScrollBarVisibility="Visible" Width="472" VerticalScrollBarVisibility="Hidden"  HorizontalAlignment="Left"  >
                <Grid x:Name="PartsGrid" HorizontalAlignment="Left"  VerticalAlignment="Top" />
            </ScrollViewer>
        </GroupBox>
        </StackPanel>

    </Grid>


</Window>
